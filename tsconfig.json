{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],    
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
